# Application settings
APP_NAME="FastAPI Backend"
APP_VERSION="1.0.0"
DEBUG=true
API_V1_STR="/api/v1"

# Security settings
SECRET_KEY="dev-secret-key-change-in-production-minimum-32-characters-long"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM="HS256"

# Database settings
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_PORT=5432
# DATABASE_URL will be auto-generated from above values

# Redis settings
REDIS_URL=redis://localhost:6379/0

# Google OAuth settings
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# CORS settings (JSON array as string)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8080", "http://localhost:3000"]

# Logging
LOG_LEVEL=INFO

# Optional: pgAdmin settings (only used if running with --profile tools)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin